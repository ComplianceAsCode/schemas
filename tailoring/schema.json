{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://github.com/ComplianceAsCode/schemas/tailoring/schema.json",
  "title": "Tailoring",
  "description": "The Tailoring",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "profiles": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "anyOf": [
          {
            "required": ["id","base_profile_id"]
          }, {
            "required": ["id","title"]
          }
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "base_profile_id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "rules": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "additionalProperties": true,
              "anyOf": [
                {
                  "required": ["evaluate"]
                }, {
                  "required": ["severity"]
                }, {
                  "required": ["role"]
                }
              ],
              "properties": {
                "evaluate": {
                  "type": "boolean"
                },
                "severity": {
                  "type": "string",
                  "enum": ["unknown", "info", "low", "medium", "high"]
                },
                "role": {
                  "type": "string",
                  "enum": ["full", "unscored", "unchecked"]
                }
              }
            }
          },
          "variables": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "additionalProperties": true,
              "oneOf": [
                {
                  "required": ["value"]
                }, {
                  "required": ["option_id"]
                }
              ],
              "properties": {
                "value": {
                  "type": ["string", "integer", "boolean"]
                },
                "option_id": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}