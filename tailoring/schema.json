{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://github.com/ComplianceAsCode/schemas/tailoring/schema.json",
  "title": "Tailoring",
  "description": "The Tailoring",
  "type": "object",
  "required": ["base_profile_id"],
  "additionalProperties": false,
  "properties": {
    "base_profile_id": {
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "rules": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "minProperties": 1,
        "properties": {
          "selected": {
            "type": "boolean"
          },
          "severity": {
            "type": "string",
            "enum": ["unknown", "info", "low", "medium", "high"]
          },
          "role": {
            "type": "string",
            "enum": ["full", "unscored", "unchecked"]
          }
        }
      }
    },
    "variables": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "minProperties": 1,
        "properties": {
          "value": {
            "type": ["string", "integer", "boolean"]
          }
        }
      }
    }
  }
}